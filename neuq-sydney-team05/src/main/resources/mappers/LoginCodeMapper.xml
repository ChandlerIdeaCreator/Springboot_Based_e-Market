<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school_mall.repository.LoginCodeMapper">
  
  <resultMap id="BaseResultMap" type="com.school_mall.entity.LoginCode">
    <id column="id" property="id" jdbcType="BIGINT"/>
    <result column="phone" property="phone" jdbcType="VARCHAR"/>
    <result column="code" property="code" jdbcType="VARCHAR"/>
    <result column="expire_time" property="expireTime" jdbcType="TIMESTAMP"/>
    <result column="used" property="used" jdbcType="TINYINT"/>
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
  </resultMap>
  
  <sql id="Base_Column_List">
    id, phone, code, expire_time, used, create_time, update_time
  </sql>

  <select id="selectById" parameterType="long" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List"/>
    FROM login_code
    WHERE id = #{id}
  </select>

  <select id="selectAll" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List"/>
    FROM login_code
  </select>

  <select id="selectLatestByPhone" parameterType="string" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List"/>
    FROM login_code
    WHERE phone = #{phone}
    ORDER BY id DESC
    LIMIT 1
  </select>

  <insert id="insert" parameterType="com.school_mall.entity.LoginCode" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO login_code (phone, code, expire_time, used, create_time, update_time)
    VALUES (#{phone}, #{code}, #{expireTime}, #{used}, #{createTime}, #{updateTime})
  </insert>

  <insert id="insertSelective" parameterType="com.school_mall.entity.LoginCode" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO login_code
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="phone != null">phone,</if>
      <if test="code != null">code,</if>
      <if test="expireTime != null">expire_time,</if>
      <if test="used != null">used,</if>
      <if test="createTime != null">create_time,</if>
      <if test="updateTime != null">update_time,</if>
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      <if test="phone != null">#{phone},</if>
      <if test="code != null">#{code},</if>
      <if test="expireTime != null">#{expireTime},</if>
      <if test="used != null">#{used},</if>
      <if test="createTime != null">#{createTime},</if>
      <if test="updateTime != null">#{updateTime},</if>
    </trim>
  </insert>

  <update id="updateById" parameterType="com.school_mall.entity.LoginCode">
    UPDATE login_code
    SET phone = #{phone}, code = #{code}, expire_time = #{expireTime}, used = #{used},
        create_time = #{createTime}, update_time = #{updateTime}
    WHERE id = #{id}
  </update>

  <update id="updateByIdSelective" parameterType="com.school_mall.entity.LoginCode">
    UPDATE login_code
    <set>
      <if test="phone != null">phone = #{phone},</if>
      <if test="code != null">code = #{code},</if>
      <if test="expireTime != null">expire_time = #{expireTime},</if>
      <if test="used != null">used = #{used},</if>
      <if test="createTime != null">create_time = #{createTime},</if>
      <if test="updateTime != null">update_time = #{updateTime},</if>
    </set>
    WHERE id = #{id}
  </update>

  <update id="markUsed" parameterType="long">
    UPDATE login_code
    SET used = 1, update_time = NOW()
    WHERE id = #{id}
  </update>

  <delete id="deleteById" parameterType="long">
    DELETE FROM login_code WHERE id = #{id}
  </delete>

  <delete id="deleteExpired" parameterType="timestamp">
    DELETE FROM login_code WHERE expire_time < #{now}
  </delete>

</mapper> 